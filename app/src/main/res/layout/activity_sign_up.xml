<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pk.shareabook.SignUp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageTitle"
        android:layout_marginTop="30dp"
        android:background="#000"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:alpha="0.5"
        android:src="@drawable/r_bg_login"
        android:layout_alignTop="@+id/imageTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="JOIN TO SHARE"
    android:textStyle="bold"
    android:textSize="20sp"
    android:textColor="#fff"
    android:layout_alignTop="@+id/imageTitle"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="36dp"
    android:id="@+id/textView2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/tvRegister"
        android:textColor="#555"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/imageTitle"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginTop="21dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_Email"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@+id/tvRegister"
        android:paddingTop="20dp"
        android:textColorHint="#BFBFBF"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_watever"
            android:layout_width="match_parent"
            android:hint="Email or Username"
            android:backgroundTint="#fff"
            android:textColor="#555"
            android:layout_height="wrap_content"
            />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_password"
        android:layout_width="match_parent"
        android:layout_below="@+id/input_layout_Email"
        android:textColorHint="#BFBFBF"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:textColor="#555"
            android:hint="Password"
            android:backgroundTint="#fff"
            android:layout_height="wrap_content"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/input_layout_password"
        android:layout_width="match_parent"
        android:id="@+id/input_layout_reTypePass"
        android:textColorHint="#BFBFBF"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:textColor="#555"
            android:hint="Retype Password"
            android:backgroundTint="#fff"
            android:layout_height="wrap_content"
            />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_marginTop="30dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_btn_login"
        android:layout_below="@+id/input_layout_reTypePass"
        android:text="SIGNUP"
        android:id="@+id/btnSignUo" />


</RelativeLayout>
